<div class="container mt-3">
  <div class="row justify-content-center no-gutters">
    <div class="col-12 col-lg-10 text-center header">
      <div class="wrapper-white">
        <h1><span class="highlight-red">Career Paths</span></h1>
        <h4>A day in the life of a...</h4>
      </div>
    </div>
  </div>
  <div class="row justify-content-center no-gutters">
    <div class="col-12 col-lg-3">
      <ul class="nav tabs-underlined" id="myTab" role="tablist">
        <% data.careers.each_with_index do |career, index| %>
          <li class="nav-item" role="presentation">
            <a class="<%= 'active' if index.zero? %> tab-underlined" id="home-tab" data-toggle="tab" href="#content-<%= index %>" role="tab" aria-controls="home" aria-selected="true"><%= career.name %></a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="col-12 col-lg-7 wrapper-gray">
      <div class="tab-content flex-content-center" id="myTabContent">
        <% data.careers.each_with_index do |career, index| %>
          <div class="tab-pane fade p-3 <%= 'show active' if index.zero? %>" id="content-<%= index %>" role="tabpanel" aria-labelledby="home-tab">
            <iframe title="vimeo-player" src="<%= career.video %>" width="100%" height="360" frameborder="0" allowfullscreen></iframe>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>